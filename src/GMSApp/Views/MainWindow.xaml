<Window x:Class="GMSApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Garage Management System"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <StackPanel Background="#FF2D2D30" Grid.Column="0">
            <TextBlock Text="GMS" Foreground="White" FontSize="20"
                       Margin="10" HorizontalAlignment="Center" />

            <Button Content="Vehicles"
                    Margin="10"
                    Padding="5"
                    Click="VehiclesButton_Click" />
            <!-- Add more navigation buttons here -->
        </StackPanel>

        <!-- Main Content -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
