<Window x:Class="GMSApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GMSApp.Views"
        Title="GMS Application"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>

        <!-- LOGIN VIEW (Hidden when IsLoggedIn is TRUE) -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Text="Login to GMS"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       TextAlignment="Center" />

            <TextBlock Text="Username:" />
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" />

            <Button Content="Login"
                    Command="{Binding LoginCommand}"
                    HorizontalAlignment="Right"
                    Margin="10"
                    IsDefault="True" />

            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="Red"
                       TextAlignment="Center"
                       Margin="0,20,0,0" />
        </StackPanel>

        <!-- MAIN APP VIEW (Shown only when IsLoggedIn is TRUE) -->
        <DockPanel>
            <DockPanel.Style>
                <Style TargetType="DockPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>

            <!-- Top Menu -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Logout" Click="FileLogout_Click" />
                    <MenuItem Header="Exit" Click="FileExit_Click" />
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="User Guide" Click="HelpGuide_Click" />
                </MenuItem>
                <MenuItem Header="About" Click="About_Click" />
            </Menu>

            <!-- Main Layout -->
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Side Navigation -->
                <StackPanel Grid.Column="0" Background="#FF2D2D30">
                    <TextBlock Text="GMS"
                               Foreground="White"
                               FontSize="22"
                               Margin="10"
                               HorizontalAlignment="Center" />
                    <Button Content="Files" Click="FilesButton_Click" Margin="10" />
                    <Button Content="Job" Click="MainContent_Click" Margin="10" />
                    <Button Content="HRMS" Click="HContent_Click" Margin="10" />
                    <Button Content="Accounts" Click="AContent_Click" Margin="10" />
                </StackPanel>

                <!-- Main Content Area -->
                <ContentControl x:Name="MainContent" Grid.Column="1" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>
