<Window x:Class="GMSApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Management System"
       
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="FileOpen_Click"/>
                <MenuItem Header="Exit" Click="FileExit_Click"/>

            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="User Guide" Click="HelpGuide_Click"/>
            </MenuItem>

            <MenuItem Header="About" Click="About_Click"/>
        </Menu>

        <!-- Main Grid -->
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation -->
            <StackPanel Background="#FF2D2D30" Grid.Column="0">
                <TextBlock Text="JMS" Foreground="White" FontSize="22" Margin="10" HorizontalAlignment="Center"/>
                <Button Content="Files" Click="FilesButton_Click" Margin="10"/>
                <Button Content="Core" Click="CoreMainButton_Click" Margin="10"/>
                <Button Content="Manage Products" Width="200" Margin="10" Click="ProductButton_Click"/>
                <Button Content="Manage Categories" Width="200" Margin="10" Click="CategoryButton_Click"/>
            </StackPanel>

            <!-- Main Content Area -->
            <ContentControl x:Name="MainContent" Grid.Column="1"/>
        </Grid>
    </DockPanel>
</Window>
