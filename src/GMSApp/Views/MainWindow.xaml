<Window x:Class="GMSApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GMSApp.ViewModels"
        xmlns:local="clr-namespace:GMSApp.Views"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Garage Management" Height="900" Width="1300">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Background="#FF333333" Height="50" Grid.Row="0">
            <TextBlock Text="Garage Management System" Margin="10" Foreground="White" VerticalAlignment="Center" FontSize="20"/>
            <Button Content="Logout" DockPanel.Dock="Right" Margin="10" Width="80" Command="{Binding LogoutCommand}" />
        </DockPanel>

        <ContentControl Grid.Row="1">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static vm:AppPage.Login}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <local:LoginView DataContext="{Binding LoginVM}" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static vm:AppPage.Main}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <local:MainContentView />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>

</Window>
   