<UserControl x:Class="GMSApp.Views.Job.PurchaseOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1100">

    <!--
      Note: The ViewModel should be assigned to the DataContext from the hosting window/container.
      This XAML assumes DataContext is PurchaseOrderViewModel with:
       - ObservableCollection<PurchaseOrder> PurchaseOrders
       - PurchaseOrder? SelectedPurchaseOrder
       - ICommand LoadCommand, AddCommand, SaveCommand, DeleteCommand
       - ICommand AddLineCommand, RemoveLineCommand, PrintCommand, UploadFileCommand
    -->

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Purchase Order list -->
        <Border Grid.Column="0" Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Background="WhiteSmoke">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 8" HorizontalAlignment="Stretch">
                    <Button Content="Reload" Command="{Binding LoadCommand}" Width="70" Margin="0,0,6,0"/>
                    <Button Content="New" Command="{Binding AddCommand}" Width="70" Margin="0,0,6,0"/>
                    <Button Content="Save" Command="{Binding SaveCommand}" Width="70" Margin="0,0,6,0"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}" Width="70" />
                </StackPanel>

                <DataGrid ItemsSource="{Binding PurchaseOrders}"
                          SelectedItem="{Binding SelectedPurchaseOrder, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="False"
                          Margin="0"
                          MinHeight="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="PO #" Binding="{Binding PONumber}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" Width="120"/>
                        <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="*"/>
                        <DataGridTextColumn Header="SubTotal" Binding="{Binding SubTotal, StringFormat=N2}" Width="110"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=N2}" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- spacer -->
        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" ShowsPreview="True" />

        <!-- Right: Details and lines -->
        <Border Grid.Column="2" Padding="12" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header: basic fields -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Top" Margin="0,0,0,6">
                    <StackPanel Width="420">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="PO Number:" Width="90" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedPurchaseOrder.PONumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Date:" Width="90" VerticalAlignment="Center"/>
                            <DatePicker SelectedDate="{Binding SelectedPurchaseOrder.Date, Mode=TwoWay}" />
                        </StackPanel>
                        <!-- Vendor selection block (replace existing Vendor TextBox) -->
<StackPanel Orientation="Horizontal" Margin="0,0,0,6">
    <TextBlock Text="Vendor:" Width="90" VerticalAlignment="Center"/>
    <ComboBox x:Name="VendorComboBox"
              Width="220"
              ItemsSource="{Binding Vendors}"
              SelectedItem="{Binding SelectedVendor, Mode=TwoWay}"
              DisplayMemberPath="Name"               <!-- adjust if your vendor has different display property -->
              IsEditable="True"
              IsTextSearchEnabled="True"
              StaysOpenOnEdit="False"
              DropDownOpened="VendorComboBox_DropDownOpened"/>
    <!-- optional: show vendor id -->
    <TextBlock Text="{Binding SelectedVendor.Id}" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
</StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Currency:" Width="90" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedPurchaseOrder.Currency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                            <TextBlock Text="Status:" Width="60" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedPurchaseOrder.Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="24,0,0,0" Width="300">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Discount:" Width="90" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedPurchaseOrder.Discount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Tax:" Width="90" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedPurchaseOrder.Tax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="SubTotal:" Width="90" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedPurchaseOrder.SubTotal, StringFormat=N2}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Total:" Width="90" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedPurchaseOrder.Total, StringFormat=N2}" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Notes -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Text="Notes:" Width="70" VerticalAlignment="Top"/>
                    <TextBox Text="{Binding SelectedPurchaseOrder.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Lines grid -->
                <GroupBox Grid.Row="4" Header="Lines" Padding="6">
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                            <Button Content="Add Line" Command="{Binding AddLineCommand}" Width="90" Margin="0,0,6,0"/>
                            <Button Content="Remove Line" Command="{Binding RemoveLineCommand}"
                                    CommandParameter="{Binding SelectedItem, ElementName=LinesDataGrid}" Width="100" Margin="0,0,6,0"/>
                            <Button Content="Upload File" Command="{Binding UploadFileCommand}" Width="100" Margin="0,0,6,0"/>
                            <Button Content="Print" Command="{Binding PrintCommand}" Width="80" />
                        </StackPanel>

                        <DataGrid x:Name="LinesDataGrid"
                                  ItemsSource="{Binding SelectedPurchaseOrder.Lines}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  IsReadOnly="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                <DataGridTextColumn Header="Part #" Binding="{Binding PartNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" />
                                <DataGridTextColumn Header="Unit" Binding="{Binding Unit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                                <DataGridTextColumn Header="Qty" Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="80" />
                                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="110" />
                                <DataGridTextColumn Header="Line Total" Binding="{Binding LineTotal, Mode=OneWay, StringFormat=N2}" Width="110" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Notes" Binding="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>

                <!-- Footer: Persist controls -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,12,0" Foreground="Gray" FontSize="11">
                        Tip: Click New to create a draft PO. Click Save to persist.
                    </TextBlock>
                    <Button Content="Cancel" Width="90" Margin="0,0,6,0" />
                    <Button Content="Save" Command="{Binding SaveCommand}" Width="100" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>