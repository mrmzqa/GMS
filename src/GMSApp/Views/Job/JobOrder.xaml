<UserControl x:Class="GMSApp.Views.Job.Joborder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Job list & actions -->
        <Border Grid.Column="0" Padding="8" Background="WhiteSmoke" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 8">
                    <Button Content="Reload" Command="{Binding LoadJobordersCommand}" Width="70" Margin="0,0,6,0"/>
                    <Button Content="New" Command="{Binding AddJoborderCommand}" Width="70" Margin="0,0,6,0"/>
                    <Button Content="Save" Command="{Binding SaveJoborderCommand}" Width="70" Margin="0,0,6,0"/>
                    <Button Content="Update" Command="{Binding UpdateJoborderCommand}" Width="70" Margin="0,0,6,0"/>
                    <Button Content="Delete" Command="{Binding DeleteJoborderCommand}" Width="70" />
                </StackPanel>

                <DataGrid ItemsSource="{Binding Joborders}"
                          SelectedItem="{Binding SelectedJoborder, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          MinHeight="420">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                        <DataGridTextColumn Header="Vehicle" Binding="{Binding VehicleNumber}" Width="120"/>
                        <DataGridTextColumn Header="Created" Binding="{Binding Created, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" ShowsPreview="True"/>

        <!-- Right: Job details and items -->
        <Border Grid.Column="2" Padding="12" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header fields -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,6">
                    <StackPanel Width="560">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Customer:" Width="110" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedJoborder.CustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="360"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Phone:" Width="110" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedJoborder.Phonenumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                            <TextBlock Text="Vehicle:" Width="80" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedJoborder.VehicleNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Brand:" Width="110" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedJoborder.Brand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                            <TextBlock Text="Model:" Width="80" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding SelectedJoborder.Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Image attachments info -->
                    <StackPanel Width="260" Margin="12,0,0,0">
                        <TextBlock Text="Attachments" FontWeight="Bold" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Button Content="Front..." Command="{Binding FrontFileCommand}" Width="80"/>
                            <TextBlock Text="{Binding SelectedJoborder.FN}" Margin="8,6,0,0" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Button Content="Back..." Command="{Binding BackFileCommand}" Width="80"/>
                            <TextBlock Text="{Binding SelectedJoborder.BN}" Margin="8,6,0,0" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Button Content="Left..." Command="{Binding LeftFileCommand}" Width="80"/>
                            <TextBlock Text="{Binding SelectedJoborder.LSN}" Margin="8,6,0,0" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Right..." Command="{Binding RightFileCommand}" Width="80"/>
                            <TextBlock Text="{Binding SelectedJoborder.RSN}" Margin="8,6,0,0" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Quick totals/info -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,6">
                    <TextBlock Text="Items Total:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding Total, StringFormat=N2}" VerticalAlignment="Center" />
                    <Button Content="Print" Command="{Binding PrintCommand}" Width="90" Margin="20,0,0,0"/>
                    <Button Content="Complete Job" Command="{Binding CompleteJoborderCommand}" Width="120" Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Items grid -->
                <GroupBox Grid.Row="4" Header="Items" Padding="6">
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                            <Button Content="Add Item" Command="{Binding AddItemCommand}" Width="90" Margin="0,0,6,0"/>
                            <Button Content="Remove Item" Command="{Binding RemoveItemCommand}" CommandParameter="{Binding SelectedItem, ElementName=JobItemsGrid}" Width="100" Margin="0,0,6,0"/>
                        </StackPanel>

                        <DataGrid x:Name="JobItemsGrid"
                                  ItemsSource="{Binding Items}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="False">
                            <DataGrid.Columns>
                                <!-- Inventory selection column -->
                                <DataGridComboBoxColumn Header="Inventory Item"
                                                        SelectedValueBinding="{Binding InventoryItemId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectedValuePath="Id"
                                                        DisplayMemberPath="Name"
                                                        ItemsSource="{Binding DataContext.InventoryItems, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Width="300"/>
                                <!-- Name (editable) -->
                                <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="220"/>
                                <DataGridTextColumn Header="Qty" Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                                <DataGridTextColumn Header="Price" Binding="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="100"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, Mode=OneWay, StringFormat=N2}" Width="120" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>

                <!-- Footer actions -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,12,0" Foreground="Gray" FontSize="11">
                        Tip: Select item from Inventory to consume stock when completing job.
                    </TextBlock>
                    <Button Content="Save" Command="{Binding SaveJoborderCommand}" Width="110" Margin="0,0,6,0"/>
                    <Button Content="Update" Command="{Binding UpdateJoborderCommand}" Width="110" Margin="0,0,6,0"/>
                    <Button Content="Complete" Command="{Binding CompleteJoborderCommand}" Width="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>