<UserControl x:Class="GMSApp.Views.ProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GMSApp.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GMSApp.ViewModels"
         Height="600" Width="800"
        mc:Ignorable="d">
    

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- New Product Entry -->
        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="250" Margin="0,0,10,0" 
                     materialDesign:HintAssist.Hint="Product Name"
                     Text="{Binding NewProductName, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="100" Margin="0,0,10,0"
                     materialDesign:HintAssist.Hint="Price"
                     Text="{Binding NewProductPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"/>
            <ComboBox Width="180" Margin="0,0,10,0" 
                      ItemsSource="{Binding Categories}" DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedCategoryForNewProduct}"
                      materialDesign:HintAssist.Hint="Select Category"/>
            <Button Content="Add" Width="80" Margin="0,0,10,0" Command="{Binding AddProductCommand}"
                    IsEnabled="{Binding Path=AddProductCommand.CanExecute, Mode=OneWay}"/>
        </StackPanel>

        <!-- Product List -->
        <ListView Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="250" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Price, StringFormat=C}" />
                    <GridViewColumn Header="Category" Width="200" DisplayMemberBinding="{Binding Category.Name}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Edit Product Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="5">
            <Button Content="Edit Selected" Width="100" Margin="5,0,0,0" Command="{Binding UpdateProductCommand}"
                    IsEnabled="{Binding Path=UpdateProductCommand.CanExecute, Mode=OneWay}"/>
            <Button Content="Delete Selected" Width="120" Margin="5,0,0,0" Command="{Binding DeleteProductCommand}"
                    IsEnabled="{Binding Path=DeleteProductCommand.CanExecute, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</UserControl>