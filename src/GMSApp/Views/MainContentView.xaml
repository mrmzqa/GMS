<UserControl x:Class="GmsApp.Views.MainContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GmsApp.Views">
    <Grid>
        <TabControl>
            <TabItem Header="Dashboard">
                <TextBlock Text="Dashboard content (statistics, quick links, etc.)"
                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22"/>
            </TabItem>
            <TabItem Header="Inventory">
                <TextBlock Text="Inventory tab content here" />
            </TabItem>
            <TabItem Header="Jobs">
                <TextBlock Text="Service Jobs tab content here" />
            </TabItem>
            <TabItem Header="Employee">
                <TextBlock Text="Employee tab content here" />
            </TabItem>
            <TabItem Header="Receipts">
                <TextBlock Text="Receipts tab content here" />
            </TabItem>
            <TabItem Header="Accounts">
                <TextBlock Text="Accounts tab content here" />
            </TabItem>
            <TabItem Header="Vendor">
                <TextBlock Text="Vendor tab content here" />
            </TabItem>
            <local:MainContentView/>
        </TabControl>
        
    </Grid>
</UserControl>