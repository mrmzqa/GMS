<UserControl x:Class="GMSApp.Views.CoreMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Margin="10">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: List and buttons -->
        <StackPanel Grid.Column="0">
            <Button Content="Add New" Command="{Binding AddCoreMainCommand}" Margin="0,0,0,5"/>
            <Button Content="Update" Command="{Binding UpdateCoreMainCommand}" Margin="0,0,0,5" 
                    IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="Delete" Command="{Binding DeleteCoreMainCommand}" Margin="0,0,0,10"
                    IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}"/>
            <ListBox ItemsSource="{Binding CoreMains}" SelectedItem="{Binding SelectedCoreMain}" 
                     DisplayMemberPath="Name" Height="400" />
        </StackPanel>

        <!-- Right: Selected CoreMain details and images -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Edit CoreMain" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Name:" Width="100" VerticalAlignment="Center"/>
                <TextBox Text="{Binding SelectedCoreMain.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left" >
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Header Image" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="150">
                        <Image Stretch="Uniform">
                            <Image.Source>
                                <Binding Path="SelectedCoreMain.HeaderFile" Converter="{StaticResource ByteArrayToImageConverter}" />
                            </Image.Source>
                        </Image>
                    </Border>
                    <Button Content="Upload Header" Command="{Binding UploadHeaderFileCommand}" Margin="0,5,0,0"
                            IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}" />
                    <TextBlock Text="{Binding SelectedCoreMain.HeaderName}" FontStyle="Italic" FontSize="11" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Footer Image" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="150">
                        <Image Stretch="Uniform">
                            <Image.Source>
                                <Binding Path="SelectedCoreMain.FooterFile" Converter="{StaticResource ByteArrayToImageConverter}" />
                            </Image.Source>
                        </Image>
                    </Border>
                    <Button Content="Upload Footer" Command="{Binding UploadFooterFileCommand}" Margin="0,5,0,0"
                            IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}" />
                    <TextBlock Text="{Binding SelectedCoreMain.FooterName}" FontStyle="Italic" FontSize="11" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>