<UserControl x:Class="GMSApp.Views.CoreMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:vm="clr-namespace:GMSApp.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             Height="Auto" Width="Auto" Margin="10">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left panel: List and CRUD buttons -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <Button Content="Add New CoreMain" Command="{Binding AddCoreMainCommand}" Margin="0,0,0,5"/>
            <Button Content="Update" Command="{Binding UpdateCoreMainCommand}" Margin="0,0,0,5"
                    IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}" />
            <Button Content="Delete" Command="{Binding DeleteCoreMainCommand}" Margin="0,0,0,10"
                    IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}" />

            <ListBox ItemsSource="{Binding CoreMains}" 
                     SelectedItem="{Binding SelectedCoreMain}" 
                     DisplayMemberPath="Name"
                     Height="400"/>
        </StackPanel>

        <!-- Right panel: Details and header/footer images -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="CoreMain Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Name:" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="300" Text="{Binding SelectedCoreMain.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Header Image" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="150">
                        <Image Stretch="Uniform" >
                            <Image.Source>
                                <BitmapImage UriSource="{x:Null}"/>
                            </Image.Source>
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource ByteArrayToImageConverter}">
                                    <Binding Path="SelectedCoreMain.HeaderFile"/>
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                    </Border>
                    <Button Content="Upload Header" Command="{Binding UploadHeaderFileCommand}" Margin="0,5,0,0" 
                            IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}" />
                    <TextBlock Text="{Binding SelectedCoreMain.HeaderName}" FontStyle="Italic" FontSize="11" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Footer Image" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="150">
                        <Image Stretch="Uniform" >
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource ByteArrayToImageConverter}">
                                    <Binding Path="SelectedCoreMain.FooterFile"/>
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                    </Border>
                    <Button Content="Upload Footer" Command="{Binding UploadFooterFileCommand}" Margin="0,5,0,0" 
                            IsEnabled="{Binding SelectedCoreMain, Converter={StaticResource NullToBoolConverter}}" />
                    <TextBlock Text="{Binding SelectedCoreMain.FooterName}" FontStyle="Italic" FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>