<UserControl x:Class="GmsApp.Views.HrContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GmsApp.Views" Height="Auto" Width="Auto"
             >
    <Grid Margin="1" Height="Auto" Width="Auto">

        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Menu">
                <TreeView RenderTransformOrigin="1,2.285" Margin="6,7,4,8" Height="250">
                    <Button Margin="1" Content="Employee" /> 
                    <Button  Margin="1" Content="Attendance"/> 
                    <Button  Margin="1" Content="Asset" /> 
                    <Button Margin="1" Content="Salary"/>
                    <Button Margin="1" Content="Leave"/>
                    <Button Margin="1" Content="Work"/>
                </TreeView>
                
            </TabItem>
            <TabItem Header="Leave">
                <ContentControl x:Name="LevContent"
Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
            </TabItem>
            <TabItem Header="Asset">
                <ContentControl x:Name="AssetContent"
Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
            </TabItem>
            <TabItem Header="Employee">
                <ContentControl x:Name="EmpContent"
            Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
            </TabItem>
            <TabItem Header="Attendance">
                <ContentControl x:Name="AttContent"
                       Height="Auto" Width="Auto" FontSize="9"/>
            </TabItem>
            <TabItem Header="Salary">
                <ContentControl x:Name="SalContent"
                            Height="Auto" Width="Auto" FontSize="9"/>
            </TabItem>
            <TabItem Header="Work">
                <ContentControl x:Name="WorkContent"
                Height="Auto" Width="Auto" FontSize="9"/>
            </TabItem>
          


        </TabControl>


    </Grid>
</UserControl>