<Window x:Class="GMSApp.Views.UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modern Form with DataGrid"
        Height="600" Width="500"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Form Section -->
            <RowDefinition Height="20"/>
            <!-- Spacer -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Form Section -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="User Registration"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333333"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                <TextBlock Text="Full Name" FontWeight="SemiBold" />
                <TextBox Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                <TextBlock Text="Email" FontWeight="SemiBold" />
                <TextBox Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,0,5">
                <TextBlock Text="Password" FontWeight="SemiBold" />
                <PasswordBox Height="30"/>
            </StackPanel>

            <Button Content="Register"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Width="120"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0"/>
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid x:Name="UserDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#EFEFEF"
                  RowHeight="35"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderBrush="#CCC"
                  BorderThickness="1"
                  Margin="0,10,0,0"/>
    </Grid>
</Window>
