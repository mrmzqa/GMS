<Window x:Class="Gms25.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gms25.Views"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="GMS" Height="450" Width="800"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        >
    <Window.Resources>
        <shell:WindowChrome x:Key="WindowChrome"
                            CornerRadius="12"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"/>
    </Window.Resources>
    <Border Background="#F4F6F8" CornerRadius="12" BorderBrush="#DDD" BorderThickness="1">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="#FFFFFF" Foreground="#222" Padding="8,2">
                <MenuItem Header="_File">
                    <MenuItem Header="Login" Click="LoginMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="About">
                        <MenuItem.ToolTip>
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="GMS Application" />
                                <TextBlock Text="Version 1.0" />
                                <TextBlock Text="A modern WPF app for .NET 9." />
                            </StackPanel>
                        </MenuItem.ToolTip>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <Grid>
                <!-- Main content goes here -->
                <Popup Name="LoginPopup" Placement="Center" StaysOpen="False" IsOpen="{Binding IsLoginPopupOpen, RelativeSource={RelativeSource AncestorType=Window}}">
                    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="24" Width="300">
                        <StackPanel>
                            <TextBlock Text="Login" FontWeight="Bold" FontSize="18" Margin="0,0,0,16"/>
                            <TextBox Name="UsernameBox"  Margin="0,0,0,8"/>
                            <!-- PasswordBox does not support PlaceholderText natively. Remove the property to fix the error. -->
                            <PasswordBox Name="PasswordBox" Margin="0,0,0,16"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Cancel" Margin="0,0,8,0" Click="CancelLogin_Click"/>
                                <Button Content="Login" Click="LoginButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </DockPanel>
    </Border>
</Window>