<Window x:Class="Gms25.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User CRUD" Height="400" Width="600">
    <Window.DataContext>
        <vm:UserViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser, Mode=TwoWay}" AutoGenerateColumns="False" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <TextBox Width="120" Margin="5" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Username"/>
            <TextBox Width="120" Margin="5" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Password"/>
            <Button Content="Add" Command="{Binding AddUserCommand}" Margin="5"/>
            <Button Content="Update" Command="{Binding UpdateUserCommand}" Margin="5"/>
            <Button Content="Delete" Command="{Binding DeleteUserCommand}" Margin="5"/>
            <Button Content="Refresh" Command="{Binding LoadUsersCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>