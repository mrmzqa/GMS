<Window x:Class="GMS25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMS25"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="700" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="10" 
            Background="#FF2D2D30"
            BorderThickness="1"
            BorderBrush="#FF3F3F46">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="#FF252526"
                    CornerRadius="10,10,0,0"
                    Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- App Icon and Title -->
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Image Source="/Assets/pos-icon.png" 
                               Height="20"
                               Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Title}" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource WindowButtonStyle}"
                                Content="_"
                                ToolTip="Minimize"
                                Click="MinimizeButton_Click"/>
                        
                        <Button Style="{StaticResource WindowButtonStyle}"
                                Content="🗖"
                                ToolTip="Maximize"
                                Click="MaximizeButton_Click"/>
                        
                        <Button Style="{StaticResource WindowButtonStyle}"
                                Content="X"
                                ToolTip="Close"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Navigation Menu -->
                <Border Grid.Column="0" 
                        Width="60" 
                        Background="#FF252526">
                    <StackPanel Orientation="Vertical">
                        <Button Style="{StaticResource NavIconButtonStyle}"
                                Content="🏠"
                                ToolTip="Home"
                                Command="{Binding NavigateToHomeCommand}"/>
                        
                        <Button Style="{StaticResource NavIconButtonStyle}"
                                Content="📦"
                                ToolTip="Products"
                                Command="{Binding NavigateToProductsCommand}"/>
                        
                        <Button Style="{StaticResource NavIconButtonStyle}"
                                Content="🛒"
                                ToolTip="Point of Sale"
                                Command="{Binding NavigateToCartCommand}"/>
                        
                        <Button Style="{StaticResource NavIconButtonStyle}"
                                Content="📋"
                                ToolTip="Orders"
                                Command="{Binding NavigateToOrdersCommand}"/>
                        
                        <Separator Margin="5" Background="#FF3F3F46"/>
                        
                        <Button Style="{StaticResource NavIconButtonStyle}"
                                Content="🚪"
                                ToolTip="Logout"
                                Command="{Binding LogoutCommand}"/>
                    </StackPanel>
                </Border>
                
                <!-- Content Area -->
                <ContentControl Grid.Column="1" 
                                Content="{Binding CurrentView}"
                                Margin="10"/>
            </Grid>
        </Grid>
    </Border>
</Window>