<Window x:Class="GMS25.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPosApp"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Menu -->
        <Border Grid.Row="0" Background="#333" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Home" Command="{Binding NavigateToHomeCommand}" 
                        Style="{StaticResource NavButtonStyle}" Visibility="{Binding IsLoggedIn}"/>
                <Button Content="Products" Command="{Binding NavigateToProductsCommand}" 
                        Style="{StaticResource NavButtonStyle}" Visibility="{Binding IsLoggedIn}"/>
                <Button Content="Cart" Command="{Binding NavigateToCartCommand}" 
                        Style="{StaticResource NavButtonStyle}" Visibility="{Binding IsLoggedIn}"/>
                <Button Content="Orders" Command="{Binding NavigateToOrdersCommand}" 
                        Style="{StaticResource NavButtonStyle}" Visibility="{Binding IsLoggedIn}"/>
                <Button Content="Logout" Command="{Binding LogoutCommand}" 
                        Style="{StaticResource NavButtonStyle}" HorizontalAlignment="Right"
                        Visibility="{Binding IsLoggedIn}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>