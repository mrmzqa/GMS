<UserControl x:Class="GMS25.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GMS25.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Orders List -->
        <ListView ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Order ID" DisplayMemberBinding="{Binding OrderId}"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding OrderDate, StringFormat={}{0:g}}"/>
                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding TotalAmount, StringFormat=C}"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}"/>
                    <GridViewColumn Header="User" DisplayMemberBinding="{Binding User.Username}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Order Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Mark as Completed" Command="{Binding UpdateOrderStatusCommand}" CommandParameter="Completed" Margin="0,0,5,0"/>
            <Button Content="Mark as Cancelled" Command="{Binding UpdateOrderStatusCommand}" CommandParameter="Cancelled"/>
        </StackPanel>
    </Grid>
</UserControl>