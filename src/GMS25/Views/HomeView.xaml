<UserControl x:Class="WpfPosApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPosApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF2D2D30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Assets/pos-welcome.png" 
                   Height="150"
                   Margin="0,0,0,20"
                   Stretch="Uniform"/>
            
            <TextBlock Text="Welcome to POS System"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="{Binding WelcomeMessage}"
                       FontSize="16"
                       Foreground="LightGray"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Products" 
                        Command="{Binding NavigateToProductsCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        Margin="0,0,10,0"/>
                
                <Button Content="Point of Sale" 
                        Command="{Binding NavigateToCartCommand}"
                        Style="{StaticResource NavButtonStyle}"
                        Margin="0,0,10,0"/>
                
                <Button Content="Orders" 
                        Command="{Binding NavigateToOrdersCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>